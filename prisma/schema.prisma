generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Node {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  edgesFrom Edge[]   @relation("edgesFrom")
  edgesTo   Edge[]   @relation("edgesTo")
}

model Edge {
  id       Int   @id @default(autoincrement())
  title    String
  sourceId Int
  targetId Int
  source   Node   @relation("edgesFrom", fields: [sourceId], references: [id])
  target   Node   @relation("edgesTo", fields: [targetId], references: [id])
}
