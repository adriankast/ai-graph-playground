generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Node {
  id            Int      @id @default(autoincrement())
  name          String   @unique
  edgesFrom     Edge[]   @relation("edgesFrom")
  edgesTo       Edge[]   @relation("edgesTo")
  createdAt     DateTime @default(now())
}

model Edge {
  id        Int      @id @default(autoincrement())
  title     String
  sourceId  Int
  source    Node     @relation(name: "edgesFrom", fields: [sourceId], references: [id])
  targetId  Int
  target    Node     @relation(name: "edgesTo", fields: [targetId], references: [id])
}
